<div class="col-md-12">
  <div class="group">
    <%= link_to("New Message", new_board_path, class: "btn btn-primary pull-right")%>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td>#</td>
          <td><%= link_to(board.title, board_path(board)) %></td>
          <td><%= board.description %></td>
          <td>
            <%= link_to("Edit", edit_board_path(board), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", board_path(board), class: "btn btn-sm btn-default",
                        method: :delete, data: {confirm: "Are you sure?"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
